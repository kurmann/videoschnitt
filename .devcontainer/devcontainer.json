{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",

    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "tamasfe.even-better-toml"
            ],
            // Stelle sicher, dass die Poetry virtuelle Umgebung aktiviert wird
            "settings": {
                "python.defaultInterpreterPath": "~/.cache/pypoetry/virtualenvs/kurmann-videoschnitt-py3.12/bin/python",
                "python.terminal.activateEnvironment": true
            }
        }
    }
}
