{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/ConsoleApp/ConsoleApp.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "bash",
            "type": "process",
            "args": [
                "${workspaceFolder}/.vscode/publish.sh",
                "${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/ConsoleApp/ConsoleApp.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "generate-cli-docs",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "typer ${workspaceFolder}/src/apple_compressor_manager/app.py utils docs --name apple-compressor-manager --output ${workspaceFolder}/docs/cli/apple_compressor_manager.md && typer ${workspaceFolder}/src/original_media_integrator/app.py utils docs --name original-media-integrator --output ${workspaceFolder}/docs/cli/original_media_integrator.md && typer ${workspaceFolder}/src/emby_integrator/app.py utils docs --name emby-integrator --output ${workspaceFolder}/docs/cli/emby_integrator.md"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}