{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate-cli-docs-apple-compressor-manager",
            "type": "shell",
            "command": "/Library/Frameworks/Python.framework/Versions/3.11/bin/python3",
            "args": [
                "-m",
                "typer",
                "${workspaceFolder}/src/apple_compressor_manager/app.py",
                "utils",
                "docs",
                "--name",
                "apple-compressor-manager",
                "--output",
                "${workspaceFolder}/docs/cli/apple_compressor_manager.md"
            ],
            "problemMatcher": [],
            "options": {
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/src"
                }
            },
            "group": "build"
        },
        {
