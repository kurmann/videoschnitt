{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate-cli-docs",
            "type": "shell",
            "command": "/Library/Frameworks/Python.framework/Versions/3.11/bin/python3",  // Verwende den spezifischen Pfad zu python3
            "args": [
                "-m",
                "typer",
                "${workspaceFolder}/src/kurmann_videoschnitt/app.py",
                "utils",
                "docs",
                "--name",
                "kurmann-videoschnitt",
                "--output",
                "${workspaceFolder}/docs/cli/kurmann_videoschnitt.md"
            ],
            "problemMatcher": [],
            "options": {
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/src"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}