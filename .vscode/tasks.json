{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Application/Application.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "bash",
            "type": "process",
            "args": [
                "${workspaceFolder}/.vscode/deploy.sh",
                "${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "label": "deploy",
            "dependsOn": [
                "publish"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Application/Application.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}